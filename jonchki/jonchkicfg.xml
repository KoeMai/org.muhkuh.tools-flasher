<jonchkicfg>
	<repositories>
		<!-- This local repository contains the build artefacts from this project. -->
		<repository id="local" type="file" cacheable="false">
			<root>../repository</root>
			<versions>[group]/[module]</versions>
			<config>[group]/[module]/[version]/[artifact]-[version].[extension]</config>
			<artifact>[group]/[module]/[version]/[artifact]-[version].[extension]</artifact>
		</repository>

		<!-- The nexus repository contains the more or less stable artifacts. Should be replaced with sf and bintray. -->
		<repository id="nexus" type="url" cacheable="true">
			<root>http://192.168.100.94/content/repositories/jonchki</root>
			<versions>[group]/[artifact]</versions>
			<config>[group]/[artifact]/[version]/[artifact]-[version].[extension]</config>
			<artifact>[group]/[artifact]/[version]/[artifact]-[version].[extension]</artifact>
		</repository>
	</repositories>
</jonchkicfg>
